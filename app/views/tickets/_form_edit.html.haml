= form_for(@ticket, :html => { class: 'form-horizontal', role: 'form' }) do |f|
  .form-group
    - if @ticket.errors.any?
      #error_explanation
        %h2
          = pluralize(@ticket.errors.count, "error")
          prohibited this ticket from being saved:
        %ul
          - @ticket.errors.full_messages.each do |msg|
            %li= msg
  .field
    = f.label :customer_name
    %br/
    = f.text_field :customer_name, disabled: 'disabled'
  .field
    = f.label :customer_email
    %br/
    = f.text_field :customer_email, disabled: 'disabled'
  .field
    = f.label :subject
    %br/
    = f.text_field :subject
  .field
    = f.label :ticket_body
    %br/
    = f.text_area :ticket_body, cols: '30', rows: '10'
  .actions
    = f.submit
